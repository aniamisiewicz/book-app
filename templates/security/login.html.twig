{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="my-page">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                {{'logged.as' |trans}} {{ app.user.name }}, <a href="{{ path('app_logout') }}">{{'logout' |trans}}</a>
            </div>
        {% endif %}

        <h1 class="is-size-3">{{'header.login' |trans}}</h1>
        <div class="form-input">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input" autocomplete="email" autofocus>
        </div>
        <div class="form-input">
            <label for="inputPassword">{{'password' |trans}}</label>
            <input type="password" name="password" id="inputPassword" class="input" autocomplete="current-password">
        </div>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="button is-primary" type="submit">
            {{'header.login' |trans}}
        </button>
    </form>


</div>
{% endblock %}
