{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="my-page">
     <h1 class="is-size-3">{{'users' |trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>{{'roles' |trans}}</th>
                {#<th>Password</th>#}
                <th>{{'name' |trans}}</th>
                <th>{{'actions' |trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join(', ') |replace({'ROLE_ADMIN': 'Admin', 'ROLE_USER': "User"}) }}</td>
                {#<td>{{ user.password }}</td>#}
                <td>{{ user.name }}</td>
                <td>
                    <a class="button is-primary is-light" href="{{ path('app_user_show', {'id': user.id}) }}">{{'show' |trans}}</a>
                    <a class="button is-link is-light" href="{{ path('app_user_edit', {'id': user.id}) }}">{{'edit' |trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{ 'no.records'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="button is-primary" href="{{ path('app_user_new') }}">{{'user.new' |trans}} </a>
</div>    
{% endblock %}
